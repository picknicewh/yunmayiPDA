<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.support.corder.CancleOrderActivity">
    <include layout="@layout/layout_base_park"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_title"
        android:gravity="center"
        android:minHeight="@dimen/space_x5"
        android:orientation="horizontal"
        android:padding="@dimen/space">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单数："
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_cancel_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/red_btn"
                android:textSize="@dimen/ts_large" />
            <TextView
                android:layout_toRightOf="@+id/tv_cancel_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/single"
                android:textSize="@dimen/ts_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消箱数："
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_cancel_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/red_btn"
                android:textSize="@dimen/ts_large" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/box"
                android:textSize="@dimen/ts_large" />
        </LinearLayout>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
        android:id="@+id/rv_park"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
