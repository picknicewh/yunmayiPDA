<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/space_x5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/space">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space"
                android:layout_weight="1"
                android:text="开始时间："
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawablePadding="@dimen/space"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:gravity="right"
                android:padding="@dimen/space_x0.5"
                android:text="2017-11-21"
                android:textSize="@dimen/ts_large"
                android:textColor="@color/normal"
              />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x0.5"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space"
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space"
                android:layout_weight="1"
                android:text="结束时间："
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawablePadding="@dimen/space"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:gravity="right"
                android:text="2017-11-21"
                android:padding="@dimen/space_x0.5"
                android:textColor="@color/normal"
                android:textSize="@dimen/ts_large"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/space_x5"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关键字："
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <com.yun.mayi.pda.widget.ClearEditText
            android:id="@+id/et_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/space_x3.5"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/gray_border_bg"
            android:hint="标记"
            android:padding="@dimen/space_x0.5"
            android:textSize="@dimen/ts_medium" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_x3"
            android:layout_gravity="center"
            android:background="@drawable/round_red"
            android:gravity="center"
            android:paddingLeft="@dimen/space_x2"
            android:paddingRight="@dimen/space_x2"
            android:text="@string/search"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>