<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="@dimen/space"
        android:padding="@dimen/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="订单号："
            android:textSize="@dimen/ts_large"
            android:textColor="@color/goods_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.yun.mayi.pda.widget.ClearEditText
            android:id="@+id/et_sign"
            android:background="@drawable/rect_grey_bg"
            android:padding="@dimen/space"
            android:textSize="@dimen/ts_large"
            android:textColor="@color/goods_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_conform"
        android:layout_margin="@dimen/space"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_large"
        android:text="@string/conform"
        android:background="@drawable/round_red"
        android:gravity="center"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x5" />
</LinearLayout>
