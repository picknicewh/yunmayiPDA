<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_x0.1">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:text="可口可乐120ml" />

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="12瓶/箱" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x0.5"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_circle_minus" />

                <TextView
                    android:id="@+id/tv_adjust_count"
                    android:layout_width="@dimen/space_x4"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_minus"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/goods_text_color"
                    android:textSize="@dimen/ts_large" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_adjust_count"
                    android:paddingRight="@dimen/space_x2.5"
                    android:src="@mipmap/ic_circle_add" />

                <TextView
                    android:id="@+id/tv_all_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_add"
                    android:background="@drawable/round_orange"
                    android:gravity="center"
                    android:paddingBottom="@dimen/space_x0.5"
                    android:paddingLeft="@dimen/space_x2"
                    android:paddingRight="@dimen/space_x2"
                    android:paddingTop="@dimen/space_x0.5"
                    android:text="全缺"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_org_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="原始数量：" />

                <TextView
                    android:id="@+id/tv_org_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/space_x2"
                    android:layout_toRightOf="@+id/tv_org_text"
                    android:text="6件" />

                <TextView
                    android:id="@+id/tv_packed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/space"
                    android:layout_toRightOf="@+id/tv_org_num"
                    android:text="已确认数量:" />

                <TextView
                    android:id="@+id/tv_packed_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_packed_text"
                    android:text="10件" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_conform"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_x3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/round_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/space_x0.5"
                android:paddingLeft="@dimen/space_x2"
                android:paddingRight="@dimen/space_x2"
                android:paddingTop="@dimen/space_x0.5"
                android:text="确认"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>