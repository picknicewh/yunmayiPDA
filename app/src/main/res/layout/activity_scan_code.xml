<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.mayi.pda.module.join.loadscan.LoadScanCodeActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/space_x5"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="司   机："
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_drawer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:gravity="right"
            android:hint="请选择司机"
            android:textColorHint="@color/normal"
            android:textColor="@color/normal"
            android:lines="1"
            android:singleLine="true"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/space_x5"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单号："
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <com.yun.mayi.pda.widget.ClearEditText
            android:id="@+id/et_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:background="@drawable/gray_border_bg"
            android:hint="请输入订单号"
            android:lines="1"
            android:minHeight="@dimen/space_x3.5"
            android:padding="@dimen/space_x0.5"
            android:singleLine="true"
            android:textSize="@dimen/ts_medium" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_conform"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x5"
        android:layout_margin="@dimen/space_x2"
        android:background="@drawable/round_red"
        android:gravity="center"
        android:text="@string/conform"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_large" />
</LinearLayout>
