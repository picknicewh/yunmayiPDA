<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.mayi.pda.module.join.search.SupportSearchActivity">

    <include
        android:id="@+id/layout_park"
        layout="@layout/layout_base_park" />

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space"
        android:paddingLeft="@dimen/space"
        android:paddingRight="@dimen/space">

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:text="分拣员："
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:background="@color/white"
            android:id="@+id/tv_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="请选择"
            android:padding="@dimen/space_x0.5"
            android:textColor="@color/normal"
            android:textSize="@dimen/ts_large"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space"
        android:paddingLeft="@dimen/space"
        android:paddingRight="@dimen/space">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:text="类型："
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:background="@color/white"
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="请选择"
            android:layout_gravity="center"
            android:padding="@dimen/space_x0.5"
            android:textColor="@color/normal"
            android:textSize="@dimen/ts_large"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_search_detail"
        android:layout_margin="@dimen/space_x2"
        android:background="@drawable/round_red"
        android:textColor="@color/white"
        android:text="确认"
        android:gravity="center"
        android:textSize="@dimen/ts_large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x5" />
</LinearLayout>
