<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/space_x4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="订单号:"
                    android:textColor="@color/goods_text_color"
                    android:textSize="@dimen/ts_large" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space"
                    android:layout_marginRight="@dimen/space"
                    android:text="855229449622623"
                    android:textSize="@dimen/ts_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="标记:"
                    android:textColor="@color/goods_text_color"
                    android:textSize="@dimen/ts_large" />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space"
                    android:text="萧山5"
                    android:textSize="@dimen/ts_large" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_park_car"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_x3"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space"
            android:background="@drawable/round_orange"
            android:gravity="center"
            android:paddingLeft="@dimen/space_x1.5"
            android:paddingRight="@dimen/space_x1.5"
            android:text="发车"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>