<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/space_x0.1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:minHeight="@dimen/space_x4"
        android:orientation="vertical"
        android:padding="@dimen/space">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="订单号:"
                android:textSize="@dimen/ts_large"
                android:textColor="@color/goods_text_color"
                />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="128476664498"
                android:textSize="@dimen/ts_large"
                android:layout_marginLeft="@dimen/space"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="标记:"
                android:textSize="@dimen/ts_large"
                android:textColor="@color/goods_text_color"
            />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/ts_large"
                android:text="拱墅1"
                android:layout_marginLeft="@dimen/space"
                android:layout_marginRight="@dimen/space"
               />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_parking"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_x3"
        android:layout_gravity="center"
        android:background="@drawable/round_orange"
        android:gravity="center"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x0.5"
        android:text="分拣"
        android:textColor="@color/white" />
</LinearLayout>