<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/space_x0.1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="可口可乐120ml" />

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="12瓶/箱" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x0.5"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="原件数：" />
            <TextView
                android:id="@+id/tv_num"
                android:layout_toRightOf="@+id/tv_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red_btn"
                android:gravity="center" />
            <TextView
                android:layout_toRightOf="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="件"
                android:gravity="center" />
            <TextView
                android:layout_toRightOf="@+id/tv_num"
                android:id="@+id/tv_sku_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_x3"
                android:gravity="center"
                android:text="实际件数："
                />
            <TextView
                android:id="@+id/tv_actual_num"
                android:layout_toRightOf="@+id/tv_sku_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red_btn"
                android:gravity="center" />
            <TextView
                android:layout_toRightOf="@+id/tv_actual_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="件"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_conform"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_x3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/round_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/space_x0.5"
                android:paddingLeft="@dimen/space_x2"
                android:paddingRight="@dimen/space_x2"
                android:paddingTop="@dimen/space_x0.5"
                android:text="删除"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>