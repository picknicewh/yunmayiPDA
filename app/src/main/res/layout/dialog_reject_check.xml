<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
         <TextView
             android:text="填写退货审核备注"
             android:gravity="center"
             android:textSize="@dimen/ts_large"
             android:textColor="@color/rb_text_color"
             android:padding="@dimen/space"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
        <com.yun.mayi.pda.widget.ClearEditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@drawable/rect_grey_bg"
            android:hint="请填写备注"
            android:minHeight="100dp"
            android:padding="@dimen/space_x2"
            android:textSize="@dimen/ts_medium" />

        <Button
            android:layout_marginTop="@dimen/space"
            android:id="@+id/bt_conform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>


</LinearLayout>