<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_x0.1"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱号："
            android:textColor="@color/goods_text_color" />

        <TextView
            android:id="@+id/tv_box_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="15488816947" />

        <TextView
            android:id="@+id/tv_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标记："
            android:textColor="@color/goods_text_color" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="拱墅1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:layout_marginTop="@dimen/space_x0.5"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_box_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sku数："
                android:textColor="@color/goods_text_color" />

            <TextView
                android:id="@+id/tv_sku_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_x2"
                android:text="件数："
                android:textColor="@color/goods_text_color" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_box_num"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_circle_minus" />

            <TextView
                android:id="@+id/tv_adjust_count"
                android:layout_width="@dimen/space_x4"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_minus"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_large" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_adjust_count"
                android:src="@mipmap/ic_circle_add" />

            <TextView
                android:text="7箱"
                android:id="@+id/tv_box_count"
                android:layout_marginLeft="@dimen/space_x2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_less"
            android:layout_width="@dimen/space_x6"
            android:layout_height="@dimen/space_x3"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space_x2"
            android:background="@drawable/round_orange"
            android:gravity="center"
            android:text="缺货"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_conform_goods"
            android:layout_width="@dimen/space_x6"
            android:layout_height="@dimen/space_x3"
            android:layout_gravity="center"
            android:background="@drawable/round_orange"
            android:gravity="center"
            android:text="收货"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
