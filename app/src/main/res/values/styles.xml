<resources>

    <style name="NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="commonTextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ts_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/space</item>
        <item name="android:paddingRight">@dimen/space</item>
        <item name="android:paddingTop">@dimen/space_x1.5</item>
        <item name="android:paddingBottom">@dimen/space_x1.5</item>
    </style>
    <style name="home_nav_btn">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/home_nav_text_color</item>
    </style>
    <style
        name="DialogStyle">
        <item name="android:windowFrame">@null</item><!-- 该界面对应的前景图片 -->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮窗类型 -->
        <item name="android:windowIsTranslucent">true</item><!-- 是否透明 -->
        <item name="android:windowNoTitle">true</item><!-- 是否带有title -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="common_rb">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/ts_large</item>
        <item name="android:textColor">@color/rb_text_color</item>
    </style>
    <style name="UpdateProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:maxHeight">30dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/update_progress_progressbar_bg</item>
    </style>

</resources>
